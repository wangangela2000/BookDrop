<body>
	<div>

		<div class="nav">
			<div class="logo-btn">
				<button type="button" onClick="parent.location='search_listing'"><img src="images/logo.png" id="logo"></button>
			</div>
			<div class="right-align">
				<div class="menu-btn">
					<button id="menu-button" type="button" onClick="parent.location='menu'"><img src="images/menu.png"></button>
				</div>
			</div>
		</div>
		<div class="section1">
			<div class="title">
				<h1>Add New Listing</h1>
			</div>

			<div class="add-form">
				<form method="POST" action="/inventory/add">

					<div class="form-component">
						<div class="form-label ftitle">
							<label for="ftitle"><p>TITLE</p></label>
						</div>
						<div class="form-input">
							<input type="text" id="ftitle" name="ftitle" placeholder="Linear Algebra 8th Edition" required>
						</div>
					</div>

					<div class="form-component">
						<div class="form-label fauthor">
							<label for="fauthor"><p>AUTHOR</p></label>
						</div>
						<div class="form-input">
							<input type="text" id="fauthor" name="fauthor" placeholder="Ron Larson" required>
						</div>
					</div>

					<div class="form-component">
						<div class="form-label fisbn">
							<label for="fisbn"><p>ISBN</p></label>
						</div>
						<div class="form-input">
							<input type="text" id="fisbn" name="fisbn" placeholder="978-1133110873" required>
						</div>
					</div>

					<div class="form-component">
						<div class="form-label fclass">
							<label for="fclass"><p>CLASS</p></label>
						</div>
						<div class="form-input">
							<input type="text" id="fclass" name="fclass" placeholder="Math 18" required>
						</div>
					</div>

					<div class="form-component">
						<div class="form-label fprice">
							<label for="fprice"><p>PRICE ($)</p></label>
						</div>
						<div class="form-input">
							<input type="text" id="fprice" name="fprice" placeholder="10.00" required>
						</div>
					</div>

					<div class="form-component">
						<div class="form-label fcondition">
							<label for="fcondition"><p>CONDITION</p></label>
						</div>
						<div class="form-input">
							<input type="text" id="fcondition" name="fcondition" placeholder="Good/Bad/Excellet" required>
						</div>
					</div>

					<div class="form-component">
						<div class="form-label fnegotiable">
							<label for="fnegotiable"><p>NEGOTIABLE</p></label>
						</div>
						<div class="form-input">
							<input type="text" id="fnegotiable" name="fnegotiable" placeholder="Yes/No" required>
						</div>
					</div>

					<!--div class="form-btn-component">
						<div class="form-label">
							<p>
								CONDITION
							</p>
						</div>
						<div class="form-btn-group">
							<div class="form-btn left-btn">
								<button type="button" id="excellent">Excellent</button>
							</div>
							<div class="form-btn middle-btn">
								<button type="button"id="good">Good</button>
							</div>
							<div class="form-btn right-btn">
								<button type="button"id="bad">Bad</button>
							</div>
						</div>
					</div-->

					<!--div class="form-btn-component">
						<div class="form-label">
							<p>
								NEGOTIABLE
							</p>
						</div>
						<div class="form-btn-group">
							<div class="form-btn left-btn">
								<button type="button"id="yes">Yes</button>
							</div>
							<div class="form-btn right-btn">
								<button type="button"id="no">No</button>
							</div>
						</div>
					</div-->


					<div class="form-btn-component">
						<div class="form-label">
							<p>
								IMAGE
							</p>
						</div>
						<div class="form-btn-group">
							<div class="form-btn single-btn">
								<button type="button">
									<div class="upload-btn-img">
										<img src="images/upload.png">
									</div>
									<div class="upload-btn-text">
										<p> Choose Image </p>
									</div>
								</button>
							</div>
						 </div>
					</div>

					<div class="form-component">
						<div class="form-label fcontact">
							<label for="fcontact"><p>SELLER CONTACT</p></label>
						</div>
						<div class="form-input">
							<input type="text" id="fcontact" name="fcontact" placeholder="facebook.com/john1234" required>
						</div>
					</div>

					<div class="form-textarea-component">
						<div class="form-label">
							<p>
								NOTES (OPTIONAL)
							</p>
						</div>
						<div class="form-textarea">
							<textarea id="fnotes" name="fnotes" rows="2"
							style="width:100%;height:40px"
							placeholder="There are some notes on the margins and highlights on the key words..."></textarea>
						</div>
					</div>


					<div class="submit-btn">
						<input type="submit" value="ADD"></input>
						<!--button type="submit" value="ADD" onClick="parent.location='inventory'"></button-->
