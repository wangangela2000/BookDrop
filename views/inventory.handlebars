</head>

<body>
	<div>

		<div class="nav">
			<div class="logo-btn">
				<button type="button" onClick="parent.location='search_listing'"><img src="images/logo.png" id="logo"></button>
			</div>
			<div class="right-align">
				<div class="menu-btn">
					<button id="menu-button" type="button" onClick="parent.location='menu'"><img src="images/menu.png"></button>
				</div>
			</div>
		</div>

		<div class="section2">
			<div class ="result-heading">
				<div class="result-title">
					My Inventory
				</div>

				</div>
			<div class="result-list">
				{{#each listings}}
				<div class="listing-component">
					<button type="button" onClick="parent.location='listing'">
						<div class="listing">
							<div class="listing-img">
								<img src="images/{{image}}">
							</div>
							<div class="listing-info">
								<div class="info-title">{{title}}</div>
								<div class="info-author">{{author}}</div>
								<div class="info-price">{{price}}</div>
								<div class="info-class">{{class}}</div>
							</div>
							<div class="remove-listing">
								<img src="images/x.png">
							</div>
						</div>
					</button>
				</div>
				{{/each}}
				<!--div class="listing-component">
					<button type="button" onClick="parent.location='listing'">
						<div class="listing">
							<div class="listing-img">
								<img src="images/listing-img.png">
							</div>
							<div class="listing-info">
								<div class="info-title">Textbook Title</div>
								<div class="info-author">by Author Name</div>
								<div class="info-price">$10.00</div>
								<div class="info-class">for Class ID</div>
							</div>
							<div class="remove-listing">
								<img src="images/x.png">
							</div>
						</div>
					</button>
				</div-->


				<div class="add-btn-group">
					<div class="add-btn single-btn">
						<button type="button" onClick="parent.location='add_listing'">
							<div class="add-btn-img">
								<img src="images/+.png">
							</div>
							<div class="add-btn-text">
								<p> Add New Listing </p>
							</div>
						</button>
					</div>
				 </div>


			</div>
		</div>

	</div>
</body>
</html>
