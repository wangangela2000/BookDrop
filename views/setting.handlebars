<!doctype html>

<html>
<head>
	{{> ga}}
	<title>BookDrop</title>
	<meta charset="utf-8">
	<link rel="icon" href="favicon.ico" type="image/x-icon" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="css/setting_style.css" rel="stylesheet">
	<link href="css/nav_style.css" rel="stylesheet">
	<link href="css/form_style.css" rel="stylesheet">

	<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:ital,wght@0,100...900;1,100...900">

	<!-- this is a comment in HTML -->
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
</head>

<body>
	<div>

		<div class="nav">
			<div class="logo-btn">
				<button type="button" onClick="parent.location='/search_listing'"><img src="images/logo.png" id="logo"></button>
			</div>
			<div class="right-align">
				<div class="menu-btn">
					<button id="menu-button" type="button" onClick="parent.location='/menu'"><img src="images/menu.png"></button>
				</div>
			</div>
		</div>
		<div class="section1">
			<div class="title">
				<h1>Account Settings</h1>
			</div>

			<div class="profile-img">
					<img src="images/user.png" id="user">

			</div>

			<div class="filters-form">
				<form method="post" action="/setting">


					<div class="form-component">
						<div class="form-label fname">
							<label for="fname"><p>NAME</p></label>
						</div>
						<div class="form-input">
							<input type="text" id="fname" name="fname" value="Harry Potter">
						</div>
					</div>

					<div class="form-component">
						<div class="form-label femail">
							<label for="femail"><p>UNIVERSITY EMAIL</p></label>
						</div>
						<div class="form-input">
							<input type="text" id="femail" name="femail" value="hpotter@ucsd.edu">
						</div>
					</div>

					<div class="form-component">
						<div class="form-label fcontact">
							<label for="fcontact"><p>DEFAULT CONTACT</p></label>
						</div>
						<div class="form-input">
							<input type="text" id="fcontact" name="fcontact" value="facebook.com/hpotter">
						</div>
					</div>

					<script>
						function unimplementedAlert() {
							alert("This is not a core feature and has not been implemented.");
						}
					</script>

					<div class="submit-btn" onclick="unimplementedAlert()">
						<input type="submit" value="SAVE">
					</div>

				</form>
				<div class="other-btn">
					<button type="button" onClick="parent.location='/search_listing'">CANCEL</button>
				</div>
			</div>
		</div>
	</div>
</body>
</html>
